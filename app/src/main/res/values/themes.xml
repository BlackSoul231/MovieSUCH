<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieSUCH" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorPrimary">#004900</item>
        <item name="colorPrimaryDark">#2A2A2A</item>
        <item name="colorAccent">#004394</item>
    </style>

    <style name="RoundButton"
        parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextShadow" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
</resources>