<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <us.deveron.moviesuch.SubscribeView
        android:id="@+id/subsription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/source_annotation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/central_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subsription"
        app:layout_constrainedWidth="true">

        <Button
            android:id="@+id/button1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/testor2"
            android:text="@string/button2"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/testor2"
            android:text="@string/button3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/testor2"
            android:onClick="onClickToast"
            android:text="@string/button4" />

        <Button
            android:id="@+id/button4"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/testor2"
            android:text="@string/button5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/testor2"
            android:text="@string/button6" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#80979EAB"
        app:layout_constraintBottom_toBottomOf="parent">


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/aliens_movie"
                android:contentDescription="Aliens move poster"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/dark_knight_movie"
                android:contentDescription="Dark Knight move poster"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/gladiator_movie"
                android:contentDescription="Gladiator move poster"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/top_gun_movie2"
                android:contentDescription="Top Gun move poster"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/source_annotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="Источник: https://www.movieposters.com"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>